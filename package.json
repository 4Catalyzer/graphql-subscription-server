{
  "name": "@4c/graphql-subscription-server",
  "version": "0.9.0",
  "files": [
    "lib",
    "es"
  ],
  "main": "lib/index.js",
  "modules": "es/index.js",
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:flow",
    "build:cjs": "babel src -d lib --ignore __tests__",
    "build:esm": "BABEL_ENV=esm babel src --out-dir es --ignore __tests__",
    "build:flow": "for file in $(find ./src -name '*.js' -not -path '*/__tests__*'); do cp \"$file\" `echo \"$file\" | sed 's/\\/src\\//\\/lib\\//g'`.flow; cp \"$file\" `echo \"$file\" | sed 's/\\/src\\//\\/es\\//g'`.flow; done",
    "check": "flow check",
    "clean": "rm -rf lib es",
    "format": "eslint . --fix && prettier --write --ignore-path .eslintignore '**/*.{json,css,md}'",
    "lint": "npm run check && eslint . && prettier --list-different --ignore-path .eslintignore '**/*.{json,css,md}'",
    "prepublish": "npm run build",
    "tdd": "jest --watch",
    "test": "npm run lint && jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write --ignore-path .eslintignore",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "roots": [
      "<rootDir>/test"
    ],
    "testEnvironment": "node"
  },
  "release": {
    "extends": [
      "@4c/semantic-release-config"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/4Catalyzer/graphql-subscription-server.git"
  },
  "author": "4Catalyzer",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "redis": "^2.8.0",
    "socket.io": "^2.3.0"
  },
  "peerDependencies": {
    "graphql": ">=0.12.3"
  },
  "devDependencies": {
    "@4c/babel-preset": "^7.0.0",
    "@4c/semantic-release-config": "^2.0.2",
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/preset-flow": "^7.0.0",
    "babel-jest": "^24.9.0",
    "codecov": "^3.6.0",
    "eslint": "^6.4.0",
    "eslint-config-4catalyzer-flow": "^1.0.0",
    "eslint-config-4catalyzer-flow-react": "^1.0.2",
    "eslint-config-4catalyzer-jest": "^2.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "flow-bin": "^0.108.0",
    "graphql": "^14.5.6",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "redis-mock": "^0.46.0",
    "semantic-release": "^15.13.24"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
